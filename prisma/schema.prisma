generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // Serverless uyumluluk i√ßin connection_limit/pool parametreleri eklenmez.
}

enum Role {
  USER
  ADMIN
}

enum Plan {
  FREE
  PREMIUM
}

enum SlotStatus {
  OPEN
  BOOKED
  EXPIRED
}

model User {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  name         String?
  username     String?      @unique
  email        String       @unique
  emailVerified DateTime?
  image        String?
  passwordHash String?
  role         Role         @default(USER)
  plan         Plan         @default(FREE)

  accounts     Account[]
  sessions     Session[]
  profile      UserProfile?
  links        ShortLink[]
  slots        CalendarSlot[]
}

model UserProfile {
  id         String  @id @default(cuid())
  bio        String?
  headline   String?
  themeJson  Json?
  userId     String  @unique
  userEmail  String  @unique
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShortLink {
  id         String   @id @default(cuid())
  slug       String
  targetUrl  String
  ownerId    String
  ownerEmail String
  owner      User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([ownerId, slug])
}

model CalendarSlot {
  id         String     @id @default(cuid())
  ownerId    String
  ownerEmail String
  owner      User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  startsAt   DateTime
  endsAt     DateTime
  status     SlotStatus @default(OPEN)
  booking    Booking?
}

model Booking {
  id           String       @id @default(cuid())
  slotId        String       @unique
  slot          CalendarSlot @relation(fields: [slotId], references: [id], onDelete: Cascade)
  studentEmail  String
  status        String
  createdAt     DateTime     @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
